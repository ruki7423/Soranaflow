    background-color: rgba(74, 158, 255, 0.15);
}

QMenu::item:disabled {
    color: rgba(0, 0, 0, 0.25);
}

QMenu::separator {
    height: 1px;
    background: rgba(0, 0, 0, 0.08);
    margin: 4px 8px;
}

QMenu::icon {
    padding-left: 8px;
