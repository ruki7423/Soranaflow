QProgressBar {
    background-color: rgba(0, 0, 0, 0.08);
    border: none;
    border-radius: 4px;
    height: 8px;
    text-align: center;
    color: transparent;
}

QProgressBar::chunk {
    background-color: #4A9EFF;
    border-radius: 4px;
}

/* ==================== QHeaderView (Table Headers) ==================== */
QHeaderView {
    background-color: transparent;
    border: none;
}

